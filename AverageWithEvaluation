const array = [40, 80, 100, 120];

// Average = 85

// 0-45: Chill
// 46-79: Heating
// 80-120: Damn good!

console.log(calculateHeat(array));

function calculateHeat(saunaTemperature){

    if (calculateAverage < 46) return 'Chill';
    if (calculateAverage < 80) return 'Heating';
    return 'Damn good!';
}

function calculateAverage(array){
    let sum = 0;
    for (let value of array)
        sum += value;
    return sum / array.length;;
}
